#!/usr/bin/env ruby
begin
  require 'optparse'
  require 'series'
  require 'series/command'

  options = Series::Command.options(
    :mode => 'run'
  )
  OptionParser.new do |opts|
    opts.banner = %{
usage: series [options] SUBCOMMANDS...

  Generate series data from the specified subcommands.

options:
}.lstrip

    opts.on("-h", "--help", "print this help") do
      puts opts
      puts
      puts Series.version
      exit
    end
  end.parse!

rescue Interrupt
  exit 130
rescue Errno::EPIPE
  exit 0
end
