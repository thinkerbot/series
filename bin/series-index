#!/usr/bin/env ruby
$:.unshift File.expand_path('../../lib', __FILE__)

begin
  require 'optparse'
  require 'series'
  require 'series/command'

  options = {}
  OptionParser.new do |opts|
    opts.banner = %{
usage: series-index [options]

  Echo the input index.

options:
}.lstrip

    opts.on("-h", "--help", "print this help") do
      puts opts
      puts
      puts Series.version
      exit
    end
  end.parse!

  unless ARGV.empty?
    $stderr.puts "extra arguments"
    exit 1
  end

  Series::Command.loop do |n|
    n
  end

rescue Interrupt
  exit 130
rescue Errno::EPIPE
  exit 0
end
